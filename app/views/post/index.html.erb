<h1>BOARD INDEX</h1>
<p><a href="/new" class="btn btn-success navbar-btn"><span class="glyphicon glyphicon-edit"></span>&nbsp;&nbsp;글작성 하기</a></p>
  
<hr>

<% if @listPost.empty? %>
    <h3 class="text-center">글이 없습니다!</h3>
<% else %>
    <table class="table table-hover table-striped">
        <thead>
            <th width="100px">글 번호</th>
            <th>글 제목</th>
            <th width="60px"></th>
        </thead>
        <tbody>
            <% @listPost.each do |onePost| %>
                <tr>
                    <td><%= onePost.id %></td>
                    <td>
                        <%= link_to onePost.title, "show/#{onePost.id}" %>
                    </td>
                    <td>
                        <%= link_to '', "/edit/#{onePost.id}", class: "glyphicon glyphicon-pencil" %>&nbsp;
                        <%= link_to '', "/destroy/#{onePost.id}", class: "glyphicon glyphicon-remove" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
        <tfoot>
            
        </tfoot>
    </table>
<% end %>